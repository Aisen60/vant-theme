{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/*.json",
    "src/**/*.json",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "vite.config.ts",
    "package.json"
  ],
  "exclude": ["node_modules", "dist", ".VANT_SOURCE", "public/vant", "mobile"],
  "compilerOptions": {
    "resolveJsonModule": true,
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
